---
pagination:
    data: jobs
    size: 1
    alias: job
    resolve: values
permalink: "jobs/{{ job.title | slug }}/"
---
{% from "summary-list/macro.njk" import summaryList %}
{%- macro ul(items) %}
  <ul>
    {% for item in items %}
      <li>
        {{ item | trim }}
      </li>
    {% endfor %}
  </ul>
{% endmacro -%}

<h1>{{ job.title }}</h1>

{{ summaryList({
  rows: [
    {
      key: {
        text: "Service area"
      },
      value: {
        text: job.service_area
      }
    },
    {
      key: {
        text: "AfC Band"
      },
      value: {
        text: job.band
      }
    },
    {
      key: {
        text: "Locations"
      },
      value: {
        html: ul(job.locations)
      }
    }
  ]
}) 
}}

<p>{{ job.purpose }}</p>

<h2>Skills</h2>

<h3>Acountable</h3>

{{ ul(job.skills.accountable.specialist) }}

<h3>Staff</h3>

{{ ul(job.skills.accountable.staff) }}

<h3>Financial management</h3>

{{ ul(job.skills.accountable.financial_management) }}

<h3>Relationship management</h3>

{{ ul(job.skills.accountable.relationship_management) }}

<h3>Information management</h3>

{{ ul(job.skills.accountable.information_management) }}

<h3>Additional skills</h3>

{{ ul(job.skills.additional) }}

<h2>Working relationships</h2>

{{ summaryList({
  rows: [
    {
      key: {
        text: "Responsible to"
      },
      value: {
        html: ul(job.working_relationships.responsible_to)
      }
    },
    {
      key: {
        text: "Key relationships"
      },
      value: {
        html: ul(job.working_relationships.key_relationships)
      }
    }
  ]
}) 
}}
